    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cars</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cars.Brand" class="control-label"></label>
                <input asp-for="Cars.Brand" class="form-control" />
                <span asp-validation-for="Cars.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cars.Model" class="control-label"></label>
                <input asp-for="Cars.Model" class="form-control" />
                <span asp-validation-for="Cars.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cars.Manufacture" class="control-label"></label>
                <input asp-for="Cars.Manufacture" class="form-control" />
                <span asp-validation-for="Cars.Manufacture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cars.Price" class="control-label"></label>
                <input asp-for="Cars.Price" class="form-control" />
                <span asp-validation-for="Cars.Price" class="text-danger"></span>
            </div>
